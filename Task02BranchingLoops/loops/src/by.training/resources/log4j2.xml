<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="patternfull">%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{5} - %msg%n
        </Property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${patternfull}"/>
        </Console>
        <File name="mainFile" bufferedIO="true" fileName="loops/src/by.training/log/menuLog.txt">
            <PatternLayout pattern="${patternfull}"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
        <Logger name="FileOpener" level="error" additivity="true">
            <AppenderRef ref="mainFile"/>
        </Logger>
        <Logger name="DataCreator" level="info" additivity="true">
            <AppenderRef ref="mainFile"/>
        </Logger>
        <Logger name="Menu" level="info" additivity="true">
            <AppenderRef ref="mainFile"/>
        </Logger>
    </Loggers>
</Configuration>
